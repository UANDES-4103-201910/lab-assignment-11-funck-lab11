<%= form_with(model: @event, local: true) do |form| %>
  <% if event.errors.any? %>
    <% console %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>
      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
    <% end %>

    <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.label :description %>
      <%= form.text_area :description, cols: 60, rows: 10, class: 'form-control' %>
    </div>

    <div class="form-row">
        <div class="form-group col">
          <%= form.label :start_date %><br>
          <%= date_select :event, :start_date, class: 'form-control' %>
        </div>
        <div class="form-group col">
          <%= form.label :event_venue_id %><br>
          <%= form.select(:event_venue_id, options_from_collection_for_select(EventVenue.all, :id, :name), class: 'form-control')%>
        </div>
        <div class="form-group col">
          <%= form.label :avatar%>
          <%= form.file_field :avatar, class: 'form-control-file'%>
        </div>
    </div>

    <div class="actions">
      <%= form.submit%>
    </div>

<% end %>
